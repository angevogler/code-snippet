<!doctype html>
<html>
  <head>
    <title>Home</title>
  </head>

  <body>
    <header>
      <h1>CodeSnippet</h1>
      <nav>
        <a href='/home'>Home</a>
        <a href='/new'>Create New</a>
        <a href='/explore'>Explore All</a>
        <a href='/language'>Explore Languages</a>
        <a href='/tags'>Explore Tags</a>
      </nav>
    </header>

    <h1>Create New Snippet</h1>
    <form method='post' action='/new'>
      <label>Title:</label>
      <input type='text' name='title' required>
      <label>Language:</label>
      <select name='language' required>
        <option value='HTML'>HTML</option>
        <option value='CSS'>CSS</option>
        <option value='JavaScript'>JavaScript</option>
      </select>
      <label>Code</label>
      <textarea name='code' required></textarea>
      <label>Tags:</label>
      <input type='text' name='tags'>
      <label>Notes:</label>
      <textarea name='notes'></textarea>
      <input type='submit' value='Create Snippet'>
    </form>

    {{ #newSnippet }}
    <div>
      {{ #snippet }}
      <h1>Thank you for your submission</h1>
      <h2>Title:</h2>
      <p>{{ title }}</p>
      <h2>Author:</h2>
      <p>{{ author }}</p>
      <h2>Language</h2>
      <p>{{ language }}</p>
      <h2>Code:</h2>
      <pre><code>{{ code }}</code></pre>
      <h2>Tags:</h2>
      <p>#{{ tags }}</p>
      <h2>Notes</h2>
      <p>{{ notes }}</p>
      {{ /snippet }}
    </div>
    {{ /newSnippet }}
  </body>
</html>
