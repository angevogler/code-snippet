<!doctype html>
<html>
  <head>
    <title>Home</title>
  </head>

  <body>
    <header>
      <h1>CodeSnippet</h1>
      <nav>
        <a href='/home'>Home</a>
        <a href='/new'>Create New</a>
        <a href='/explore'>Explore All</a>
        <a href='/language'>Explore Languages</a>
        <a href='/tags'>Explore Tags</a>
        <a href='/logout'>Log Out</a>
      </nav>
    </header>

    {{ #snippets }}
    <div>
      <a href="/title/{{ title }}">
        <h2>{{ title }}</h2>
      </a>
      <h2>Author:</h2>
      <p>{{ author }}</p>
      <h2>Language</h2>
      <p>{{ language }}</p>
      <h2>Code:</h2>
      <pre><code>{{ code }}</code></pre>
      <h2>Tags:</h2>
      <p>#{{ tags }}</p>
      <h2>Notes</h2>
      <p>{{ notes }}</p>
    </div>
    {{ /snippets }}

  </body>
</html>
